{
  "compilerOptions": {
    "strict": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": false,
    "module": "commonjs",
    "target": "ES5",
    "outDir": "lib/",
    "lib": [
      "dom",
      "es5",
      "es2015"
    ]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
